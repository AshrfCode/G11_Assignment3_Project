<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="representativegui.ManageSubscribersController"
      spacing="15"
      style="-fx-padding: 20;">

    <!-- ===== TITLE ===== -->
    <Label text="Manage Subscribers"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- ===== TABLE ===== -->
    <TableView fx:id="subscribersTable" prefHeight="420">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="160"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
            <TableColumn fx:id="colActive" text="Active" prefWidth="80"/>
            <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="160"/>
        </columns>

    </TableView>

    <!-- ===== ACTION BAR ===== -->
    <HBox spacing="10" alignment="CENTER_RIGHT">

        <Button text="Add Subscriber"
                onAction="#openAddSubscriber"
                styleClass="orange-button"/>

    </HBox>

    <!-- ===== MESSAGE ===== -->
    <Label fx:id="msgLabel"
           style="-fx-text-fill: #555;"/>

</VBox>
