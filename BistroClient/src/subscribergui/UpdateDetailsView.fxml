<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="subscribergui.UpdateDetailsController"
      spacing="14"
      alignment="TOP_CENTER"
      stylesheets="@UpdateDetailsView.css"
      styleClass="page">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Update Subscriber Details" styleClass="title"/>

    <Label text="You can update your email and phone number." styleClass="subtitle"/>

    <VBox spacing="10" maxWidth="420" styleClass="card">
        <Label text="✉ Email"/>
        <TextField fx:id="emailField" promptText="name@example.com"/>

        <Label text="☎ Phone"/>
        <TextField fx:id="phoneField" promptText="05XXXXXXXX"/>

        <Button text="Save Changes"
                fx:id="saveBtn"
                onAction="#handleSave"
                maxWidth="Infinity"
                styleClass="primary-btn"/>

        <Label fx:id="statusLabel" text="" wrapText="true"/>
    </VBox>

</VBox>
