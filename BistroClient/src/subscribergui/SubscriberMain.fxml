<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="subscribergui.SubscriberMainController"
      stylesheets="@SubscriberMain.css">

    <VBox prefWidth="240"
          styleClass="sidebar"
          spacing="20">

        <Label text="BISTRO" styleClass="logo"/>

        <VBox spacing="10">
            <Button text="Make Reservation"
                    onAction="#showReservation"
                    styleClass="nav-btn"/>

            <Button text="Waiting List"
                    fx:id="waitingListBtn"
                    onAction="#showWaitingList"
                    styleClass="nav-btn"/>

            <Button text="Pay"
                    onAction="#showPayment"
                    styleClass="nav-btn"/>

            <Button text="Update Details"
                    onAction="#showUpdateDetails"
                    styleClass="nav-btn"/>

            <Button text="View History"
                    onAction="#showHistory"
                    styleClass="nav-btn"/>

            <Button text="Cancel Reservation"
                    onAction="#showCancelReservation"
                    styleClass="nav-btn"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <Button text="Logout"
                onAction="#handleLogout"
                styleClass="logout-btn"/>
    </VBox>

    <BorderPane HBox.hgrow="ALWAYS"
                styleClass="content-root">

        <top>
            <HBox styleClass="header"
                  alignment="CENTER_LEFT"
                  spacing="10">

                <!-- ✅ ברירת מחדל כדי שלא יהיה ריק בהתחלה -->
                <Label fx:id="sectionTitle"
                       text="Welcome"
                       styleClass="header-title"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- ✅ ברירת מחדל (רשות) -->
                <Label fx:id="modeBadge"
                       text=""
                       styleClass="mode-badge"/>

                <!-- ✅ ברירת מחדל (רשות) -->
                <Label fx:id="heyUserLabel"
                       text=""
                       styleClass="hey-user"/>
            </HBox>
        </top>

        <center>
            <StackPane fx:id="contentArea"
                       styleClass="content-area"/>
        </center>

    </BorderPane>

</HBox>
