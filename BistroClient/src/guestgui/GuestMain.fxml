<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="guestgui.GuestMainController"
      stylesheets="@GuestMain.css">

    <VBox prefWidth="240"
          styleClass="sidebar"
          spacing="20">

        <Label text="BISTRO" styleClass="logo"/>

        <VBox spacing="10">
            <Button text="Make Reservation"
                    onAction="#showReservation"
                    styleClass="nav-btn"/>

            <Button text="Waiting List"
                    fx:id="waitingListBtn"
                    onAction="#showWaitingList"
                    styleClass="nav-btn"/>
                    
            
            <Button text="Check In"
			        fx:id="checkInBtn"
			        onAction="#showCheckIn"
			        styleClass="nav-btn"/>


            <Button text="Pay"
                    onAction="#showPayment"
                    styleClass="nav-btn"/>
                    
            <Button text="Cancel Reservation"
                    onAction="#showCancelReservation"
                    styleClass="nav-btn"/>
                    
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>

        <Button text="â† Back to Sign In"
                onAction="#handleBack"
                styleClass="back-btn"/>
    </VBox>

    <BorderPane HBox.hgrow="ALWAYS"
                styleClass="content-root">

        <top>
            <HBox styleClass="header"
                  alignment="CENTER_LEFT"
                  spacing="10">

                <Label fx:id="sectionTitle"
                       styleClass="header-title"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="modeBadge"
                       styleClass="mode-badge"/>
            </HBox>
        </top>

        <center>
            <StackPane fx:id="contentArea"
                       styleClass="content-area"/>
        </center>

    </BorderPane>

</HBox>
