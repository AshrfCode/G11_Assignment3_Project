<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="guestgui.CheckInController"
      stylesheets="@CheckInView.css">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Title -->
    <Label text="ðŸ½ Table Check In" styleClass="title"/>

    <Label text="Please enter your confirmation code to get your table:"
           style="-fx-font-size: 14px;" />

    <TextField fx:id="codeField"
               maxWidth="300.0"
               promptText="e.g., XXXXXX"/>

    <!-- âœ… ADDED: quick select box (even if empty for now) -->
    <VBox fx:id="quickSelectBox"
          spacing="10"
          maxWidth="300.0"
          visible="false"
          managed="false"/>

    <Button text="ðŸ“ Check In Now"
            onAction="#handleCheckIn"
            styleClass="primary-btn"/>

    <Hyperlink text="Forgot confirmation code?"
               onAction="#handleForgot"
               style="-fx-text-fill: #E53935;"/>

    <Label fx:id="statusLabel"
           text=""
           wrapText="true"/>
</VBox>
