<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="representativegui.ManageTablesController"
      spacing="10" prefWidth="700" prefHeight="450">

    <TableView fx:id="tablesTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="colNumber" text="Table #" prefWidth="100"/>
            <TableColumn fx:id="colCapacity" text="Capacity" prefWidth="120"/>
            <TableColumn fx:id="colLocation" text="Location" prefWidth="200"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="numberField" promptText="Table Number" />
        <TextField fx:id="capacityField" promptText="Capacity" />
        <ComboBox fx:id="locationCombo" promptText="Location" prefWidth="160"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Add" onAction="#addTable"/>
        <Button text="Update" onAction="#updateTable"/>
        <Button text="Delete" onAction="#deleteTable"/>
        <Button text="Refresh" onAction="#refresh"/>
    </HBox>

    <Label fx:id="msgLabel" text="" />
</VBox>
