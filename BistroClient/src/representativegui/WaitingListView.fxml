<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" 
            stylesheets="@representativeMain.css" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="representativegui.WaitingListController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
             <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Waiting List Management" />
             <Button text="ðŸ”„ Refresh List" onAction="#refreshData" styleClass="action-btn"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="waitingTable">
    <columns>
        <TableColumn text="ID" prefWidth="50.0">
            <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
        </TableColumn>

        <TableColumn text="Type" prefWidth="100.0">
            <cellValueFactory><PropertyValueFactory property="type" /></cellValueFactory>
        </TableColumn>

        <TableColumn text="Name" prefWidth="150.0">
            <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
        </TableColumn>

        <TableColumn text="Phone" prefWidth="150.0">
            <cellValueFactory><PropertyValueFactory property="phone" /></cellValueFactory>
        </TableColumn>

        <TableColumn text="Request Time" prefWidth="180.0">
            <cellValueFactory><PropertyValueFactory property="timeString" /></cellValueFactory>
        </TableColumn>
    </columns>
</TableView>
    </center>
    
    <bottom>
         <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="statusLabel" text="Ready" textFill="#666" />
         </HBox>
    </bottom>

</BorderPane>