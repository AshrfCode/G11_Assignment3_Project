<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="representativegui.representativeMainController"
      stylesheets="@representativeMain.css">

    <!-- ================= SIDEBAR (FULL HEIGHT) ================= -->
    <VBox prefWidth="240"
          styleClass="sidebar"
          spacing="20">

        <Label text="BISTRO" styleClass="logo"/>

        <VBox spacing="10">
		    <Button text="Today's Reservations"
		            onAction="#showReservations"
		            styleClass="nav-btn"/>
		
		    <Button text="Waiting List"
		            onAction="#showWaitingList"
		            styleClass="nav-btn"/>
		
		    <Button text="Manage Orders"
		            onAction="#showOrders"
		            styleClass="nav-btn"/>
		
		    <Button text="Create Subscriber"
		            onAction="#showCreateSubscriber"
		            styleClass="nav-btn"/>
		
		    <Button text="Reports"
		            onAction="#showReports"
		            styleClass="nav-btn"/>
		</VBox>


        <!-- Push logout button to bottom -->
        <Region VBox.vgrow="ALWAYS"/>

        <Button text="Logout"
                onAction="#handleLogout"
                styleClass="logout-btn"/>
    </VBox>

    <!-- ================= RIGHT CONTENT ================= -->
    <BorderPane HBox.hgrow="ALWAYS"
                styleClass="content-root">

        <!-- HEADER -->
        <top>
            <HBox styleClass="header"
                  alignment="CENTER_LEFT"
                  spacing="10">

                <Label fx:id="sectionTitle"
                       styleClass="header-title"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="modeBadge"
                       styleClass="mode-badge"/>

                <Label fx:id="heyUserLabel"
                       styleClass="hey-user"/>
            </HBox>
        </top>

        <!-- CONTENT -->
        <center>
            <StackPane fx:id="contentArea"
                       styleClass="content-area"/>
        </center>

    </BorderPane>

</HBox>
