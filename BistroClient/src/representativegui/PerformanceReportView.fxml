<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="representativegui.PerformanceReportController"
            stylesheets="@representativeMain.css">
   
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
         <children>
            <Button mnemonicParsing="false" onAction="#handleBack" text="â¬… Back" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Monthly Time Report" />
            <ComboBox fx:id="monthCombo" prefWidth="100.0" promptText="Month" />
            <ComboBox fx:id="yearCombo" prefWidth="100.0" promptText="Year" />
            <Button mnemonicParsing="false" onAction="#loadData" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Generate" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
   </top>

   <center>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <PieChart fx:id="pieChart" legendSide="RIGHT" title="Arrival &amp; Duration Stats" VBox.vgrow="ALWAYS" />
            <Label fx:id="statusLabel" textFill="#666666" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>

</BorderPane>