<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="clientgui.ConnectViewController"
            prefWidth="400" prefHeight="200">

    <VBox alignment="CENTER" spacing="10.0" layoutX="50" layoutY="20" prefWidth="300" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <Label text="Connect to Server"/>
        
<HBox spacing="10">
    <Label text="Host:"/>
    <TextField fx:id="ipField" promptText="localhost"/>
</HBox>


        <HBox spacing="10">
            <Label text="Port:"/>
            <TextField fx:id="portField" promptText="5555"/>
        </HBox>

        <Button text="Connect" onAction="#handleConnect"/>
        <Label fx:id="statusLabel" textFill="red"/>
    </VBox>
</AnchorPane>
